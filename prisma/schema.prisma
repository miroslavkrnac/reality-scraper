// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int @id @default(autoincrement())
  name  String
  email String @unique
  liked Liked[]

  @@map("users")
}

enum RealityType {
  FLAT_PERSONAL
  FLAT_INVESTMENT
  LAND_PERSONAL
  LAND_INVESTMENT
}

model Reality {
  id         Int         @id @default(autoincrement())
  link       String
  img_src    String?
  title      String
  location   String
  price      String
  reality_id String
  type       RealityType @default(FLAT_PERSONAL)
  liked      Liked[]

  @@unique([reality_id, type])
  @@map("realities")
}

model Liked {
  id        Int @id @default(autoincrement())
  realityId Int
  userId    Int
  reality   Reality @relation(fields: [realityId], references: [id])
  user      User   @relation(fields: [userId], references: [id])

  @@map("liked")
}

model Deleted {
  id         Int         @id @default(autoincrement())
  reality_id String
  type       RealityType @default(FLAT_PERSONAL)
  deleted_at DateTime    @default(now())

  @@unique([reality_id, type])
  @@map("deleted")
}
